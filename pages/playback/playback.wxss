/* pages/playback/playback.wxss */

page, .page {
  height: 100%;
}

.page__bd {
  position: relative;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  flex-wrap: nowrap;
  padding-top: 58rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

.video-box {
  height: 36%;
  width: 100%;
  overflow: hidden;
}

#myVideo {
  width: 100%;
  height: 100%;
}

.weui-navbar__slider {
  width: 25%;
}

.course-introduction {
  height: 100%;
}

/* .front-cover{height: 36%;} */

.front-cover-img {
  position: relative;
  width: 100%;
}

.falseCover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-btn {
  width: 26px;
  height: 26px;
}

.weui-article__h3, .weui-article__title {
  font-weight: bold;
}

.weui-tab__content {
  height: 100%;
}

.s-play-btn {
  margin: -4px 5px 0 0;
  vertical-align: middle;
  width: 10px;
  height: 10px;
}

.jx-cell {
  padding-bottom: 26px;
}

.chapter {
  position: relative;
}

.chapter-note {
  position: absolute;
  left: 106rpx;
  bottom: 22rpx;
  height: 15px;
  line-height: 15px;
  color: #c2c2c2;
  font-size: 26rpx;
}

.all-material {
  position: absolute;
  right: 15px;
  top: 0;
  color: #999;
  font-size: 30rpx;
}

.download-icon {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  padding-left: 40rpx;
}

.chapter-title {
  flex: none;
  flex-basis: 70%;
  padding-left: 72rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
}

.chapter-handle {
  position: absolute;
  top: 50%;
  right: 15px;
  margin-top: -30rpx;
  font-size: 0;
  height: 60rpx;
}

.material {
  display: inline-block;
  font-size: 32rpx;
  color: #f79649;
  padding-right: 40rpx;
  line-height: 60rpx;
}

.lock-icon {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  margin-top: 24rpx;
}

.seria {
  position: absolute;
  left: 12px;
  top: 50%;
  height: 40rpx;
  margin-top: -20rpx;
  color: #333;
  font-size: 30rpx;
  line-height: 40rpx;
  font-weight: bold;
}

.jx-clamp {
  font-size: 30rpx;
  color: #333;
  flex-basis: 84%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.wux-backdrop, .wux-backdrop--transparent {
  top: 0 !important;
}

.changing-over {
  position: absolute;
  right: 30rpx;
  top: 0;
  width: 36rpx;
  height: 36rpx;
}
.changing-over image{
  width: 100%;
  height: auto;
}

.catalog-list-vertical {
  height: 140rpx;
  width: 100vw;
  background: #fff;
}

.vertical-view_H {
  height: 140rpx;
}

.vertical-section {
  height: 140rpx;
  width: 46vw;
  padding: 0;
  vertical-align: top;
}

.vertical-wraper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 30rpx;
  margin: 0 0 0 20rpx;
  width: calc(100% - 20rpx);
  height: 100%;
  border-radius: 12rpx;
  line-height: normal;
  border: 1rpx solid #f5f5f5;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  white-space: normal;
}

.section-icon {
  flex: 1;
  height: 30rpx;
  flex-basis: 20%;
  margin-right: 10%;
}

.section-icon .lock-icon {
  margin-top: 0;
}

.section-right {
  flex: 1;
  flex-basis: 70%;
}
.down-app{
  color: #f26e1b;
  text-align: center;
}

.section-title {
  width: 240rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.section-note {
  color: #6d6d6d;
  font-size: 26rpx;
  font-weight: normal;
  width: 240rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.front-cover {
  position: relative;
  font-size: 0;
}
.section-btn-phone{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #ff0000;
  opacity: 0;
  z-index: 10;
}

.payFor {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin: 0;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
}
.shart-btn{
  padding: 0 26rpx;
  line-height: 80rpx;
  background: #ca0d17;
  border-radius: 12rpx;
  text-align: center;
  color: #fff;
}
.fix-down-app{
  padding-bottom: 15px;
}
.fix-down-app view{
  color: #f26e1b;
  text-align: center;
}
.weui-tab__content{
  font-size: 0;
  overflow: hidden;
}
.weui-tab__content image{
  display: block;
  width: 100%;
  height: auto;
}

.weui-tab__content{
  position: relative;
}
.comment-form{
  position: fixed;
  width: 100vw;
  right: 0;
  bottom: 0;
}
.comment-form .weui-cell__bd{
  padding: 30rpx 0 10rpx 0;
}

.no-comment{
  margin: 40rpx auto;
  color: #c2c2c2;
  font-size: 26rpx;
  text-align: center;
}
.weui-tab{
  flex: 1;
  background: #fff;
  height: initial;
  overflow: hidden;
}

.mulu{
  position: relative;
  margin: 0rpx 0 34rpx 20rpx;
  padding-left: 20rpx;
  height: 33rpx;
  line-height: 33rpx;
  font-size: 33rpx;
  font-weight: bold;
  border-left: 10rpx solid #f26e1b;
}
.disable-btn{
  background: #aaa;
  color: #f1f1f1;
}
