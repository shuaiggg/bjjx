page{
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  font-size: 28rpx;
}
.form{
  width: calc(100% - 120rpx);
  display: block;
  margin: 0 auto;
}
.radio{
  width: 100%;
  margin: 30rpx auto 0;
  background: #fff;
  padding: 20rpx 0;
  /* display: flex;
  justify-content: space-around; */
  border-radius: 15rpx;
}
textarea{
  width: 100%;
  height: 300rpx;
  background: #fff;
  padding: 30rpx;
  border-radius: 15rpx;
  box-sizing: border-box;
  margin: 30rpx 0;
}
.phone{
  width: 100%;
  height: 85rpx;
  background: #fff;
  border-radius: 15rpx;
  padding-left: 25rpx;
  box-sizing: border-box;
}
.tj{
  width: 100%;
  height:85rpx;
  background: #e86e21;
  border-radius: 85rpx;
  color: #fff;
  margin-top: 50rpx;
  text-align: center;
  line-height: 85rpx;
  font-size: 32rpx;
}
.res-box{
  position: fixed;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100vw;
  height: 100vh;
  background: #f5f5f5;
  left: 0;
  top: 0;
  z-index: 10;
}
.weui-article{
  flex: 1;
}