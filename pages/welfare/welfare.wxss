page, .page{height: 100%;}
.page__bd{display:flex;height: calc(100% - 152rpx);
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/}

/* banner带圆角 */
.swiper-box{width: 100%;height: 86%;}
#swiper{height: 100%;}  

.welfare-box{position: relative;margin: 0 auto;width: 84%;height: 92%;}
.welfare-wrapper{position: absolute;left: 0;top: 0;
margin: 10px;width: calc(100% - 20px);height: calc(100% - 20px);}
.welfare-card{
  width: 100%;
  height: 100%;
  background: #fff;
}
 
.shadow-class{box-shadow: 0 0 10px rgba(0,0,0,0.5);
  -webkit-box-shadow: 0 0 10px rgba(0,0,0,0.5);
  margin: 10px;
  border-radius: 10px;
  overflow: hidden;
}
.welfare-box-img{position: relative;font-size: 0;}
.welfare-box-img image{display: block;width: 100%;height: 100%;}
.welfare-num{position: absolute;left: 0;bottom: 0;height: 60rpx;background: rgba(0,0,0,0.5);
text-align: center;width: 100%;color: #fff;font-size: 28rpx;line-height: 60rpx;}
.welfare-state{position: absolute;right: 0;top: 0;width: 80rpx;height: 80rpx;}
.welfare-state image{width: 100%;height: 100%;}

.welfare-box-content{flex: 1;text-align: center;}
.welfare-title{margin-top: 4%;height: 5%;font-size: 40rpx;font-weight: bold;
color: #333;line-height: normal;
}
.welfare-scroll{margin: 8% auto;height: 53%;width: 86%;text-align: left;font-size: 30rpx;}
.welfare-button{width: 60%;margin: 0 auto;background: #f26e1b;color: #fff;line-height: normal;border-radius: 20rpx;font-size: 32rpx;padding: 4% 0;}
