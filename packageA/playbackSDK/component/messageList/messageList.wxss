/* common/component/messageList/messageList.wxss */

.teacher {
  color: #409ae9;
}

.student {
  color: #9e9da0;
}

.self {
  color: #fd6000;
}

.message-wrapper {
  margin: 15rpx;
}

.bjy-view-divider {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.divider-line {
  flex: 1;
  height: 2rpx;
  background-color: #aaa;
}

.divider-time {
  padding: 0 20rpx;
  font-size: 0.7rem;
}

.message-flex-container {
  display: flex;
}

.bjy-message-item {
  display: inline-block;
  padding: 7rpx 20rpx;
  width: auto;
  border-radius: 6rpx;
  background: white;
}

.bjy-content {
  word-break: break-all;
  word-wrap: break-word;
  white-space: normal;
}

.avatar {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx 20rpx 0 0;
  border-radius: 50%;
  vertical-align: top;
}

.main-content {
  flex: 1;
  display: inline-block;
}

.sender-info {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 0.7rem;
}

.sender-name {
  margin-right: 10rpx;
  max-width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

send-time {
  flex: 1;
}

.image-mask-wrapper {
  position: fixed;
  z-index: 100;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  overflow-y: scroll;
}

.image-mask {
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  right: 0;
  height: 100%;
  opacity: 0.6;
  background: #333;
}

.image-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
}
.image-zoomed {
  z-index: 2;
}

.empty-image {
  text-align: center;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.message-list {
  width: 100%;
  height: 100%;
}

.teacher-only-view {
  position: fixed;
  bottom: 20rpx;
  right: 10rpx;
  font-size: 14px;
}