/* common/component/player/player.wxss */
.player-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
}

.player {
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
}

.player-cover {
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    z-index: 20;
}

.user-avatar {
}

.player-name {
    position: absolute;
    bottom: 3px;
    text-align: center;
    width: 100%;
    color: white;
    z-index: 10;
    opacity: 0.7;
}

.player-loading {
    position: absolute;
    top: 35%;
    text-align: center;
    width: 100%;
    color: white;
    z-index: 10;
}

.cover-image-wrapper {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    background: #666;
    opacity: 0.5;
}
.cover-image {
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
}
