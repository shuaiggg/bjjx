/* common/component/messageList/messageList.wxss */
.teacher {
    color: #409AE9;
}

.student {
    color: #9E9DA0
}

.self {
    color: #FD6000
}
.bjy-message-item {
    background: white;
    border-radius: 2px;
    padding: 8px 5px;
    width: auto;
    display: inline-block;
    margin-top: 8px;
}
.list-gap {
    height: 7px;
}
.username {
    display: inline-block;
    margin-right: 10px;
}
.bjy-content {
    word-break: break-all;
    word-wrap: break-word;
    white-space: normal;
}
.image-mask-wrapper {
    position: fixed;
    display: flex;
    justify-content:center;
    flex-direction: row;
    z-index: 100;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    align-items:center;
}
.image-mask {
    position: fixed;
    z-index: 1;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    opacity: 0.5;
/*    background: #333;*/
}
.image-zoomed {
    z-index: 2;
}
.empty-image {
    text-align: center;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.message-list {
    width: 100%;
    height: 100%;
}

