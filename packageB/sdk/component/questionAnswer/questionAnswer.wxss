.question-answer {
    display: flex;
    position: relative;
    justify-content: center;
    width: 100%;
    height: 100%;
    font-size: 28rpx;
    line-height: 1.5;
    color: #3d3d3e;
}

.scroll-list {
    position: absolute;
    width: 100%;
    top: 0;
    bottom: 148rpx;
}

.item-group {
    margin-top: 26rpx;
    padding: 30rpx;
    border-top: 2rpx solid #e1e1e1;
    border-bottom: 2rpx solid #ebebeb;
    background-color: #fff;
    word-break: break-all;
}

.item-group:last-child {
    margin-bottom: 30rpx;
}

.header {
    margin-bottom: 12rpx;
}

.item-icon {
    display: inline-block;
    position: relative;
    overflow: hidden;
    width: 28rpx;
    height: 28rpx;
    margin-right: 12rpx;
    border-radius: 4rpx;
    text-align: center;
    font-size: 20rpx;
    color: #fff;
}

.user-name {
    display: inline-block;
    font-weight: bold;
}

.timestamp {
    display: inline-block;
    font-size: 24rpx;
    color: #9d9d9e;
    margin-left: 20rpx;
}

.item-question .item-icon {
    background-color: #ff5850;
}

.item-answer {
    margin-top: 20rpx;
    padding: 20rpx 32rpx;
    border-radius: 6rpx;
    background-color: #f3f4f5;
    border: 2rpx solid #ebebeb;
}

.item-answer .item-icon{
    background-color: #37a4f5;
}

.input-field {
    display: block;
    box-sizing: border-box;
    position: absolute;
    width: 100%;
    height: 100rpx;
    bottom: 0;
    padding: 14rpx 20rpx;
    border-top: 2rpx solid #e6e6e8;
    background-color: #f8f8f8;
}

.forbidden-info {
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    background-color: #eee;
    color: #ccc;
    box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.1);
}

.input-box {
    display: inline-block;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 12rpx 16rpx;
    border: 1rpx solid #ededee;
    background-color: #fff;
    border-radius: 6rpx;
}

.page-info {
    display: inline-block;
    position: absolute;
    left: 24rpx;
    bottom: 104rpx;
    font-size: 24rpx;
    color: #9d9d9e;
}

.input-length-info {
    display: inline-block;
    position: absolute;
    right: 24rpx;
    bottom: 100rpx;
    padding: 4rpx 8rpx;
    font-size: 24rpx;
    color: #9d9d9e;
}