/**app.wxss**/
@import "weui.wxss";
@import "wux.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.weui-cell__bd, .weui-cell__ft{font-size: 14px;} 
.weui-cell:before, .weui-media-box:before{
  left:0;
  border-top:1rpx solid #f0f0f0;
}
.weui-cells:after{border-bottom: 1rpx solid #f0f0f0;}
.weui-panel:before{top:0;border-top:none} 
.weui-panel:after{bottom:0;border-bottom:1rpx solid #f0f0f0} 
/* 分割块儿 */
.clear-box{clear: both}
.fenge-bg{height: 30rpx;background: #f6f8f9;position: relative;}
.fenge-title{padding: 36rpx 30rpx 16rpx 30rpx;font-size: 30rpx;}
.fenge-title-left{font-weight: bold;color: #3f3f3f;}
.fenge-title-right{text-align: right;color: #6d6d6d;}
.fenge-title-border{border-left: 3px solid #f79649;}
/* button组件 */
 button {
  /* position:static; */
  display:block;
  margin: 0;
  padding: 0;
  font-size:inherit;
  text-align:left;
  line-height:normal;
  border-radius: 0;
  overflow:inherit;
  color:inherit;
  background-color:inherit;
} 
button::after{border: none;}
/* tab组件 */
.weui-navbar{border-bottom:1rpx solid #f0f0f0;background:#fff;}
.weui-navbar__item.weui-bar__item_on {color:#ff7d2f;}
.weui-navbar__slider{background: #ff7d2f;}
/* 文章页 */
.weui-article__p{overflow: hidden;}
/* 隐藏滚动条 */
::-webkit-scrollbar{width: 0;height: 0;color: transparent;}
/* 圆角阴影风格主题 */
.my-shadow{
  padding: 0 0 10px 0; 
  border-radius: 12rpx; 
  border: 1px solid #e5e5e5;
  box-shadow: 1px 1px 10px rgba(200,200,200,0.6);
  -webkit-box-shadow:1px 1px 10px rgba(200,200,200,0.6);
  overflow: hidden;
}
.jx-panel:after{content:" ";position:absolute;left:0;right:0;height:0px;color:#e5e5e5}
.jx-panel:after{bottom:0;border-bottom:0rpx solid #e5e5e5}
.jx-padding{padding: 0 8px;display:block;text-overflow:ellipsis;white-space:nowrap;
word-wrap:break-word;word-break:break-all;}
.padding10{padding: 10px}
.padding-tb{padding: 8rpx 20rpx;} 
/* list页面样式 */
.weui-panel{margin-top: 0;}
.weui-media-box{align-items: flex-start;}
.weui-media-box__hd_in-appmsg{width: 330rpx;height:198rpx;}
.weui-media-box__title{height: 72rpx;font-size: 30rpx;color: #333;margin-bottom: 90rpx;
 line-height: 36rpx;
display: -webkit-box;
overflow:hidden;
text-overflow:ellipsis;
word-wrap:break-word;
white-space:normal;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}
.weui-media-box__desc, .weui-media-box__info{ color: #6d6d6d;font-size: 13px;}
.my-media-box__info{color: #ff0000;}
.flex-bottm{display: flex;}
.flex-bottm-item{flex: 1;}
.flex-bottm-price{text-align: right;color: #ff0000}
.techer-img{margin-right:5px;width: 14px;height: 14px;border-radius: 50%;vertical-align: text-bottom;}
/* 暂无数据 */
.no-data{display: flex;width: 100%;height: 100vh;align-items:center;justify-content: center;}
.wux-prompt{background: none;}
.wux-prompt__bd{margin-top: 15%;}
/* 暂无 */
.jx-nothing{text-align: center;font-size: 30rpx;color: #6d6d6d;height: 100rpx;line-height: 100rpx;}

/* 滚动tabs */
.stick-nav{position: fixed;top: 0;left: 0;width: 100%;height: 220rpx;z-index: 10;background:#fff;}
.scroll-view_H{width: 100%;font-size: 0;white-space: nowrap;border-bottom: 1rpx solid #e5e5e5;height: 100rpx;background: #fff;}
.scroll_H_item{display: inline-block;padding: 0 20rpx;height: 100rpx;line-height: 100rpx;font-size: 30rpx;color: #555;position: relative;}
.selected{color: #f26e1b;font-weight: bold;font-size: 34rpx;}
.selected-line{position:absolute;left: 50%;bottom: 0;width: 40%;height: 8rpx;background:#f26e1b;margin-left: -20%;border-radius: 8rpx;}
/* 引导页样式 */
.guide-box{position: fixed;color:#fff;width:100%;z-index:1000;text-align: center;}
.guide-box-inner{width: 100%;color:#fff;text-align: center;}
.guide-box2{position: fixed;bottom:0;color:#fff;width:100%;z-index:1000;text-align: center;}
.guide-img{width: 100%;}
.guide-btn{
  margin: 30rpx auto 0 auto;
  border-radius:80rpx;
  border:2rpx solid #fff;
  width:240rpx;
  height:72rpx;
  text-align:center;
  line-height:72rpx;
}


.jx-input{display: inline-block;width: 62%;margin-right: 4%;
background: #fff;border-radius: 10rpx;padding-left: 4%;border: 1rpx solid #ccc;
text-overflow:inherit;overflow:auto;white-space:normal;height:82rpx;min-height:82rpx;
line-height:82rpx;
}
.jx-btn{display: inline-block;width: 28%;margin-top: 0;text-align: center;
height:82rpx;min-height:82rpx;line-height:82rpx;vertical-align: top;
border-radius: 10rpx;background: #f26e1b;color: #fff;}


/* 广告压屏窗 */
.ad-box{
  position: relative;
  flex: 1;
  color: #fff;
}
.ad-box .ad-img{
  display: block;
  width: 100vw;
  height: auto;
}
.ad-btn{
  position: absolute;
  right: 12%;
  top: 0;
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #fff;
  border-radius: 60rpx;
  line-height: 53rpx;
  background: none;
  text-align: center;
  font-weight: 100;
  color: #fff
}
.ley-tips{
  position: fixed;
  left: 0;
  top: 0;
  display: -webkit-flex;
  display: none;
  align-items: center;
  justify-content: center;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,0.5);
  z-index: 100;
  opacity: 0;
}

.fade-in{
  display: flex;
  opacity: 1;
  transition: opacity .3s;
  -webkit-transition: opacity .3s;
}